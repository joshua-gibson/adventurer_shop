
<p>Create a new Type!</p>


<br>
<form action="/types" method="post">
  <label for="name">Name:</label>
  <input type="text" name="name" id="name">
  <br>
  <br>

  <label for="category_id">Type:</label>
  <select name="category_id" id="category-id">
  <% @categories.each do |cat| %>
      <option value=<%= cat.id %>><%= cat.name %> (<%= cat.name %>)</option>
  <% end %>
  </select>


  <br>
  <br>
  <label for="usable_by">Usable By:</label>
  <input type="text" name="usable_by" id="usable-by">
  <br>
  <br>
  <input type="submit" value="Create Type">
</form>
