<p>This is all the Items</p>

<hr/>

<% @items.each do |item| %>
<img src="images/<%= item.image_name %>" alt="Item Image" height="42" width="42">
<p>Name: <%= item.name %></p>
<p>Description: <%= item.description %></p>
<p>Type: <%= item.type.name %></p>
<p>Quantity: <%= item.quantity %></p>
<p>Level: <%= item.level %></p>
<p>Effects: <%= item.effects %></p>
<p>Buy Price: <%= item.buy_price %></p>
<p>Sell Price: <%= item.sell_price %></p>
<hr/>
<% end %>
