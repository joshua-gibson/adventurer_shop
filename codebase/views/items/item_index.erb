

<h2>Stock List</h2>

  <a class="navinline" href="/shop/new">Add Item</a>

<div class="navinline hilite">
<div class="attrlist">Filter:</div>


  <% @cats.each do |cat| %>
        <a class="attrlist" href="/shop/filter/<%=  cat.id %>"><%= cat.name %></a>
  <% end %>
  <a class="attrlist" href="/shop">Remove Filter</a>

</div>

<div class="itembound">

  <% @items.each do |item| %>
  <div class="indexitem">

    <% if item.stock_warn() == "low" %>
      <div class=" stocktag stocktagadj2">Low Stock!</div>
    <% elsif item.stock_warn() == "none" %>
      <div class=" stocktag stocktagadj2 nostock">No Stock!</div>
    <% else %>
    <div class=" stocktag stocktagadj2 hide">for spacing</div>
    <% end %>

    <div class="itemimg itmimgbump">
  <img src="../../images/<%= item.image_name %>" alt="Item Image" height="42" width="42">
  </div>
  <div><%= item.name %></div>
  <div>Quantity: <%= item.quantity %></div>

  <a href="/shop/<%=item.id %>">Details</a>
  </div>
  <% end %>
</div>
