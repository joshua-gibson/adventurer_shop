
<h2>Create Item</h2>
<form action="/shop" method="post">
  <div class="formarea">
    <div class="formgroup">
      <div class="formarea">
    <label for="name">Name:</label>
    <input class="formfmt" type="text" name="name" id="name">
    </div>
    <div class="formarea">
    <label for="description">Description:</label>
    <input class="formfmt" type="text" name="description" id="description" >
    </div>
    <div class="formarea">
    <label for="image_name">Image Name:</label>
    <input class="formfmt" type="text" name="image_name" id="image-name">
    </div>

    <div class="formarea">
      <label for="type_id">Type:</label>
      <select class=" formfmt" name="type_id" id="type-id">
      <% @types.each do |type| %>
          <option value=<%= type.id %>><%= type.name %> (<%= type.category.name %>)</option>
      <% end %>
      </select>
    </div>

    <div class="formarea">
    <label for="quantity">Quantity:</label>
    <input class="formfmt" type="number" name="quantity" id="quantity">
 </div>
</div>

  <div class="formgroup">
    <div class="formarea">
    <label for="level">Level:</label>
    <input class="formfmt" type="number" name="level" id="level">
    </div>

    <div class="formarea">
    <label for="effects">Effects:</label>
    <input class="formfmt" type="text" name="effects" id="effects">
    </div>

    <div class="formarea">
    <label for="buy_price">Buy Price:</label>
    <input class="formfmt" type="number" name="buy_price" id="buy-price">
    </div>

    <div class="formarea">
    <label for="sell_price">Sell Price:</label>
    <input class="formfmt" type="number" name="sell_price" id="sell-price">
    </div>

  </div>
  </div>

      <input class="formfmt" type="submit" value="Create Item">
</form>
</div>
